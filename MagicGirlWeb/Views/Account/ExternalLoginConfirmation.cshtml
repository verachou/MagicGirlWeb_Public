@model MagicGirlWeb.Models.AccountViewModels.ExternalLoginConfirmationViewModel

@{
  ViewData["Title"] = "[低調] 線上小說轉檔";
}

<div class="unix-login">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="login-content">
          <div class="login-logo">
            <a href="index.html"><span>MagicGirlWeb</span></a>
          </div>
          <div class="login-form">
            <h4>MagicGirlWeb using a login from Google (@Model.Email)</h4>
            <form asp-controller="Account" asp-action="ExternalLoginConfirmation" enctype="multipart/form-data" method="post">
              <input asp-for="Email" type="text" hidden>
              <input asp-for="Provider" type="text" hidden>
              <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Create Account</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- unix-login -->
