@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
  ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
  <div class="content-wrap">
    <div class="main">
      <div class="container-fluid">
        <section id="main-content">
          <div class="row">
            <div class="col-lg-12 p-t-60">
              <span class="MG-Logo-land mb-show"></span>
              <h5 class="mb-center">嗨！歡迎回來！</h5>
            </div>            
          </div>
        </section>
      </div>
    </div>
  </div>
}
else
{
  <div class="content-wrap">
    <div class="main">
      <div class="container-fluid">
        <section id="main-content">
          <div class="row">
            <div class="col-lg-7 p-t-60 m-auto text-center">
              <h5 style="font-weight:400;line-height: 1.7;">噓&nbsp;別跟大家說你來過這<br><span
                style="color: #E5E6ED;text-decoration: line-through;">但歡迎用金錢贊助魔法少女們</span></h5>
              <img src="~/theme_focus/images/illust-index.png" width="100%" style="max-width: 660px;margin: 30px auto;">
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
}